{
  "name": "screenr",
  "version": "0.1.0",
  "description": "Automated interactive tutorial video generator",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "record": "tsx src/cli/record.ts",
    "serve": "tsx src/cli/serve.ts",
    "demo": "tsx src/demo.ts",
    "login": "tsx src/cli/login.ts",
    "record:gmail": "tsx src/cli/record-gmail.ts",
    "record:gov": "tsx src/cli/record-gov.ts",
    "assemble:gov": "tsx src/cli/assemble-gov.ts",
    "server": "tsx src/server/index.ts",
    "server:dev": "tsx watch src/server/index.ts",
    "studio": "tsx src/app/server.ts",
    "studio:dev": "tsx watch src/app/server.ts"
  },
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "better-sqlite3": "^12.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.22.1",
    "fluent-ffmpeg": "^2.1.2",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "openai": "^4.20.0",
    "playwright": "^1.40.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.7",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
